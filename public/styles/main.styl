$color = #666;

.logo {
  position: absolute;
  top: .3em;
  left: .5em;
  height: 80%;
}

h4 {
  font-weight: 400;
}

#topbar {
  position: fixed;
  background-color: #fff;
  color: $color;
  height: 50px;
  top: 0;
  left: 0;
  width: 100%;

  h2 {
    margin: 0;
    padding: .5em;
    text-align: center;
  }

  .switch {
    position: absolute;
    top: 1em;
    right: .5em;
    color: #e86828;
  }
}

html,
body {
  height: 100%;
}

body {
  padding-top: 50px;
}

* {
 box-sizing: border-box
}

#map-container {
  height: 100%;
}

#map {
  height: 100%;
  width: 100%;
}
