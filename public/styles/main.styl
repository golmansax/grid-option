#topbar {
  position: fixed;
  background-color: #222;
  color: #eee;
  height: 50px;
  top: 0;
  left: 0;
  width: 100%;

  h2 {
    margin: 0;
    padding: .5em;
    text-align: center;
  }

  .switch {
    position: absolute;
    top: 1em;
    right: .5em;
    color: #eee;
  }
}

html,
body {
  height: 100%;
}

body {
  padding-top: 50px;
}

* {
 box-sizing: border-box
