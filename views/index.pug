html
  head
    title Grid Option
    link(href='static/normalize.min.css', rel='stylesheet', type='text/css')
    link(href='styles/main.css', rel='stylesheet', type='text/css')
    link(rel='shortcut icon', type='image/ico', href='/favicon.ico?')
  body
    div(id="topbar")
      a(href="http://gridoption.squarespace.com")
        img(src="/LOGOgridoption.png", class='logo')
      h2#header
        = future ? 'Future predictions ' : 'Current data '
        = 'for Bakersfield, CA'
      a(id="switch", href=(future ? '/' : '/future'), class="switch")
        = future ? 'Show current data' : 'Show future predictions'
    div(id="map-container")
      div(id="map")
    script(src="/dist/bundle.js")
    script(type="text/javascript").
    script(src=`https://maps.googleapis.com/maps/api/js?key=${googleMapsKey}&callback=initMap`, async=true, defer=true)
